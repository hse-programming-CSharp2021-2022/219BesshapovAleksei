        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="buttonShow" Content="Вывод текста" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Click="buttonShow_Click"></Button>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"></TextBox>
    </Grid>
</Window>
